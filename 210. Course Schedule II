class Solution {
    public int[] findOrder(int n, int[][] edges) {
        boolean[] vis=new boolean[n];
        boolean[] recPath=new boolean[n];
        int[] ans=new int[n];
        for(int i=0;i<n;i++){
            if(!vis[i]){
                if(dfs(i,vis,edges,recPath)) return new int[0];
            }
        }
        Stack<Integer> st=new Stack<>();
        boolean[] newvis=new boolean[n];
        for(int i=0;i<n;i++){
            if(!newvis[i]){
                topSort(i,newvis,st,edges);
            }
        }
        int x=0;
        while(!st.isEmpty()){
            ans[x++] = st.pop();
        }
        return ans;
    }
    private boolean dfs(int curr,boolean[] vis,int[][] edges,boolean[] recPath){
        vis[curr]=true;
        recPath[curr]=true;
        for(int i=0;i<edges.length;i++){
            int v=edges[i][0];
            int u=edges[i][1];
            if(curr==u){
                if(!vis[v]){
                    if(dfs(v,vis,edges,recPath)) return true;
                }else if(recPath[v]) return true;
            }
        }
        recPath[curr]=false;
        return false;
    }
    private void topSort(int curr,boolean[] newvis,Stack<Integer> st,int[][] edges){
        newvis[curr]=true;
        for(int i=0;i<edges.length;i++){
            int v=edges[i][0];
            int u=edges[i][1];
            if(curr==u){
                if(!newvis[v]){
                    topSort(v,newvis,st,edges);
                }
            }
        }
        st.push(curr);    
    }
}
