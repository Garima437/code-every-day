class Solution {
    public int coinChange(int[] coins, int amount) {
        int n=coins.length;
        int[][] dp=new int[n][amount+1];
        for(int i=0;i<n;i++){
            for(int j=0;j<=amount;j++){
                dp[i][j]=-1;
            }
        }

        int ans = f(n - 1, coins, amount, dp);
        return (ans >= (int)1e9) ? -1 : ans;
    }
    private int f(int idx,int[] arr,int tar,int[][] dp){
        if(idx==0){
            if(tar%arr[idx]==0) return tar/arr[idx];
            else return (int)1e9;
        }
        if(dp[idx][tar]!=-1)return dp[idx][tar];
        int notTake=0+f(idx-1,arr,tar,dp);
        int take=Integer.MAX_VALUE;
        if(arr[idx]<=tar){
            take=1+f(idx,arr,tar-arr[idx],dp);
        }
        dp[idx][tar]=Math.min(take,notTake);
        return dp[idx][tar];
    }
}
