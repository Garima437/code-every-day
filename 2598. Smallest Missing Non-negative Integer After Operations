class Solution {
    public int findSmallestInteger(int[] nums, int value) {
        HashMap<Integer,Integer> mp=new HashMap<>();
        for(int i:nums){
            int r=((i%value)+value)%value;
            mp.put(r, mp.getOrDefault(r, 0) + 1);
        }
        int mex=0;
        while(true){
            int r = mex % value;
            if (!mp.containsKey(r) || mp.get(r) == 0) break;
            mp.put(r, mp.get(r) - 1);
            mex++;
        }
        return mex;
    }
}
