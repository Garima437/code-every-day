class Solution {
    public int countTriples(int n) {
        int cnt=0;
        for(int i=1;i<=n;i++){
            int a=1,b=i-1;
            int c=i*i;
            while(a<b){
                int sum=a*a+b*b;

                if(sum==c){
                    cnt+=2;
                    a++;
                    b--;
                }else if(sum<c){
                    a++;
                }else{
                    b--;
                }

            }
        }
        return cnt;
    }
}
