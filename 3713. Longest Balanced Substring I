class Solution {
    public int longestBalanced(String s) {
        int n = s.length();
        int ans = 0;

        for (int i = 0; i < n; i++) {
            int[] freq = new int[26];
            int maxlen = 0;
            int dist = 0;

            for (int j = i; j < n; j++) {
                int ch = s.charAt(j) - 'a';

                if (freq[ch] == 0) {
                    dist++;
                }

                freq[ch]++;
                maxlen = Math.max(maxlen, freq[ch]);

                int len = j - i + 1;

                if (len == dist * maxlen) {
                    ans = Math.max(ans, len);
                }
            }
        }

        return ans;
    }
}
