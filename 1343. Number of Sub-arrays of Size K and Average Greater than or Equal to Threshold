class Solution {
    public int numOfSubarrays(int[] arr, int k, int threshold) {
        int n=arr.length;
        int cnt=0,windoSum=0;
        for(int i=0;i<k;i++){
            windoSum+=arr[i];
        }
        if(windoSum>=k*threshold) cnt++;
        for(int i=k;i<n;i++){
            windoSum+=arr[i]-arr[i-k];
            if(windoSum>=k*threshold) cnt++;
        }
        return cnt;
    }
}
