class Solution {
    public int countValidSelections(int[] nums) {
        int n=nums.length;
        int res=0;
        for(int i=0;i<n;i++){
            if(nums[i]==0){
               if( helper(nums,1,i)){
                res+=1;
               }
               if(helper(nums,-1,i)){
                res+=1;
               }
            }
        }
        return res;
    }
    private boolean helper(int[] nums,int dir,int st){
        int[] arr=nums.clone();
        int d=dir;
        int curr=st;
        while(curr>=0&&curr<arr.length){
            if(arr[curr]==0){
                curr+=d;
            }else{
                arr[curr]-=1;
                d=-d;
                curr+=d;
            }
        }
        for(int x:arr){
            if(x!=0)return false;
        }
        return true;
    }
}
