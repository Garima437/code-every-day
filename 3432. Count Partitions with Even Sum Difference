class Solution {
    public int countPartitions(int[] nums) {
        int n=nums.length;
        int tsum=0;
        for(int i:nums){
            tsum+=i;
        }

        int lsum=0;
        int cnt=0;
        for(int i=0;i<n-1;i++){
            lsum+=nums[i];
            int rsum=tsum-lsum;
            if(lsum%2==rsum%2) cnt++;
        }
        return cnt;
    }
}
