class Solution {
    public int[] sortByBits(int[] arr) {
        int n=arr.length;
        Integer[] temp=new Integer[n];
        for(int i=0;i<n;i++){
            temp[i]=arr[i];
        }
        Arrays.sort(temp,(a,b)->{
            int cnt1=Integer.bitCount(a);
            int cnt2=Integer.bitCount(b);
            if(cnt1==cnt2) return a-b;
            return cnt1-cnt2;
        });
        for(int i=0;i<n;i++){
            arr[i]=temp[i];
        }
        return arr;
    }
}
