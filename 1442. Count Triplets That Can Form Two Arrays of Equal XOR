class Solution {
    public int countTriplets(int[] arr) {
        int n=arr.length;
        HashMap<Integer,Integer>mp=new HashMap<>();
        HashMap<Integer,Integer>sum=new HashMap<>();
        int cnt=0;
        int xor=0;
        mp.put(0,1);
        sum.put(0,0);
        for(int i=0;i<n;i++){
            xor^=arr[i];
            if(mp.containsKey(xor)){
                cnt+=mp.get(xor)*i-sum.get(xor);
            }
            mp.put(xor,mp.getOrDefault(xor,0)+1);
            sum.put(xor,sum.getOrDefault(xor,0)+i+1);
        }
        return cnt;
    }
}
