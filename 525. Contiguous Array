class Solution {
    public int findMaxLength(int[] nums) {
        int n=nums.length;
        HashMap<Integer,Integer>mp=new HashMap<>();
        mp.put(0,-1);
        int maxlen=0;
        int s=0;
        for(int i=0;i<n;i++){
            if(nums[i]==0){
                s+=1;
            }else if(nums[i]==1){
                s-=1;
            }
            if(mp.containsKey(s)){
                int len=i-mp.get(s);
                maxlen=Math.max(maxlen,len);
            }else{
                mp.put(s,i);
            }
            
        }
        return maxlen;
    }
}
