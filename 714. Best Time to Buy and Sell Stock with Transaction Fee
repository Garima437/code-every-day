class Solution {
    public int maxProfit(int[] prices, int fee) {
        int n=prices.length;
        int[][] dp=new int[n][2];
        for(int[] i:dp){
            Arrays.fill(i,-1);
        }
        return f(0,1,prices,dp,fee);
    }
    private int f(int idx,int buy,int[] arr,int[][] dp,int fee){
        if(idx==arr.length) return 0;
        if(dp[idx][buy]!=-1) return dp[idx][buy];
        if(buy==1){

            dp[idx][buy]= Math.max(-arr[idx]-fee+f(idx+1,0,arr,dp,fee),0+f(idx+1,1,arr,dp,fee));
        }else{
          dp[idx][buy]= Math.max(arr[idx]+f(idx+1,1,arr,dp,fee),0+f(idx+1,0,arr,dp,fee));
        }
        return dp[idx][buy];
    }
}       
