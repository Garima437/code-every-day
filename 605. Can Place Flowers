class Solution {
    public boolean canPlaceFlowers(int[] flowerbed, int n) {
         int len = flowerbed.length;

        for (int i = 0; i < len && n > 0; ) {

            if (flowerbed[i] == 1) {
                i += 2;
            } else {

                int left = (i == 0) ? 0 : flowerbed[i - 1];
                int right = (i == len - 1) ? 0 : flowerbed[i + 1];

                if (left == 0 && right == 0) {
                    flowerbed[i] = 1;
                    n--;
                    i += 2;     
                } else {
                    i++;       
                }
            }
        }

        return n == 0;
    }
}
