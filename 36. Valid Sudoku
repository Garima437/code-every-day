class Solution {
    public boolean isValidSudoku(char[][] board) {
        boolean[][] rows = new boolean[9][9];
        boolean[][] cols = new boolean[9][9];
        boolean[][] boxes = new boolean[9][9];

        for (int r = 0; r < 9; r++) {
            for (int c = 0; c < 9; c++) {
                char ch = board[r][c];
                if (ch == '.' ) continue;           
                int d = ch - '1';                   
                if (d < 0 || d > 8) return false;   

                int indx = (r / 3) * 3 + (c / 3);

                if (rows[r][d] || cols[c][d] || boxes[indx][d]) {
                    return false; 
                }

                rows[r][d] = true;
                cols[c][d] = true;
                boxes[indx][d] = true;
            }
        }
        return true;
    }
}
