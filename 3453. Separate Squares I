class Solution {

    public double separateSquares(int[][] squares) {

        double total = 0;
        double low = Double.MAX_VALUE;
        double high = Double.MIN_VALUE;

        for (int[] sq : squares) {
            int y = sq[1];
            int side = sq[2];
            total += (double) side * side;
            low = Math.min(low, y);
            high = Math.max(high, y + side);
        }

        double half = total / 2.0;

        for (int i = 0; i < 60; i++) { // precision ke liye
            double mid = (low + high) / 2.0;
            if (areaBelow(mid, squares) < half) {
                low = mid;
            } else {
                high = mid;
            }
        }

        return low;
    }

    private double areaBelow(double k, int[][] squares) {
        double area = 0;

        for (int[] sq : squares) {
            int y = sq[1];
            int side = sq[2];

            if (k <= y) {
                continue;
            } else if (k >= y + side) {
                area += (double) side * side;
            } else {
                area += (k - y) * side;
            }
        }
        return area;
    }
}
