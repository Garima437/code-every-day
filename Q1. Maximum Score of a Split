class Solution {
    public long maximumScore(int[] nums) {
        int n=nums.length;
        int[] suffix=new int[n];
        suffix[n-1]=nums[n-1];
        for(int i=n-2;i>=0;i--){
            suffix[i]=Math.min(suffix[i+1],nums[i]);
        }
        long presum=0;
        long maxi=Integer.MIN_VALUE;
        for(int i=0;i<n-1;i++){
            presum+=nums[i];
            long score=presum-suffix[i+1];
            maxi=Math.max(score,maxi);
        }
        return maxi;
    }
}Â©leetcode
