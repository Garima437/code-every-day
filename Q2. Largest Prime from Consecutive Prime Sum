class Solution {
    public int largestPrime(int n) {
        int len=n;
        boolean[] isprime=helper(n);
        int s=0;
        int res=0;
        for(int i=2;i<=n;i++){
            if(isprime[i]){
                s+=i;
                if(s>n) break;
                if(isprime[s]){
                    res=s;
                }
            }
        }
        return res;
    }
    private boolean[] helper(int n){
        boolean[] prime=new boolean[n+1];
        Arrays.fill(prime,true);
        if(n>=0) prime[0]=false;
        if(n>=1) prime[1]=false;
        for(int i=2;i*i<=n;i++){
            if(prime[i]){
                for(int j=i*i;j<=n;j+=i){
                    prime[j]=false;
                }
            }
        }
        return prime;
    }
}
