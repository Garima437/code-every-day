/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int postIdx;
    public TreeNode buildTree(int[] inorder, int[] postorder) {
       postIdx = postorder.length - 1;
        int m=inorder.length;
        return helper(inorder,postorder,0,m-1);
    }
    private TreeNode helper(int[] inorder,int[] postorder, int left,int right){
        if(left>right) return null;
        int rootVal = postorder[postIdx--];
        TreeNode root = new TreeNode(rootVal);
        int inIdx=search(inorder,left,right,rootVal);
       
        root.right = helper(inorder, postorder, inIdx + 1, right);
        root.left = helper(inorder, postorder, left, inIdx - 1);
       
        return root;
    }
    private int search(int[] inorder,int left,int right,int val){
        for(int i=left;i<=right;i++){
            if(inorder[i]==val){
                return i;
            }
        }
        return 0;
    }

}
