class Solution {
    public int maxDistinctElements(int[] nums, int k) {
        int n=nums.length;
        int prev=Integer.MIN_VALUE;
        int cnt=0;
        Arrays.sort(nums);
        for(int i=0;i<n;i++){
            int minVal=nums[i]-k;
            if(prev<minVal){
                prev=minVal;
                cnt++;
            }else if(prev<nums[i]+k){
                prev+=1;
                cnt++;
            }
        }
        return cnt;
    }
}
